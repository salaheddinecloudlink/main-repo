{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["packages/*", "services/*", "frontend/"],
  "npmClientArgs": ["--no-lockfile"],
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useNx": false,
  "command": {
    "version": {
      "ignoreChanges": ["*.md"],
      "npmClient": "yarn",
      "message": "chore(release): publish"
    },
    "publish": {
      "npmClient": "yarn"
    }
  }
}
